{
  "name": "color-koala",
  "version": "1.0",
  "description": "A color scheme generator for your side projects",
  "private": true,
  "keywords": [],
  "author": "Omar Rasool",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "autoprefixer": "^7.1.5",
    "babel-loader": "^8.0.4",
    "browser-sync": "^2.26.3",
    "bulma": "^0.6.0",
    "eslint": "^5.8.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.3",
    "postcss-cli": "^4.1.1",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2"
  },
  "scripts": {
    "css-deploy": "npm run css-build && npm run css-postcss",
    "css-build": "node-sass styles/app.scss dist/app.css",
    "css-postcss": "postcss --use autoprefixer --output styles/app.scss dist/app.css",
    "css-watch": "npm run css-build -- --watch",
    "deploy": "npm run css-deploy && npm run js-build",
    "js-build": "webpack --display-modules",
    "js-watch": "npm run js-build -- --watch",
    "watch": "browser-sync start -s --port '4000' --index 'index.html' --watch '*.html dist/*.css dist/*.js'",
    "start": "npm-run-all --parallel css-watch js-watch watch"
  },
  "dependencies": {
    "randomcolor": "^0.5.3"
  }
}
